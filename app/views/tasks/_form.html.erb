
<%= form_with(model: task, remote: true) do |form| %>

<div class=" flex mt-2">
  <div class="w-3/4">
    <%= form.text_field :title, class:"appearance-none block w-full bg-gray-100 text-gray-700 border focus:border-indigo-200 rounded-l py-3 px-4 leading-tight focus:outline-none focus:bg-white border-gray-400", placeholder:"Title Here e.g. Get groceries from store", "x-model":"title"  %>
  </div>
  <div class="w-1/4">
    <%= form.text_field :due_date, class:"appearance-none block w-full bg-gray-100 text-gray-700 border focus:border-indigo-200  rounded-r py-3 px-4 leading-tight focus:outline-none focus:bg-white border-gray-400", placeholder:"Due Date", data: { behavior: 'flatpickr' }, "x-model":"due_date" %>
  </div>
</div>
<div class="mt-2 hidden">
<%= form.label :Description %>
<div>
    <%= form.text_area :description, class:"appearance-none block w-full bg-gray-100 text-gray-700 border focus:border-indigo-200 rounded-l py-3 px-4 leading-tight focus:outline-none focus:bg-white border-gray-400", placeholder:"", rows:"10" %>
  </div>
</div>
<div class="relative mt-2">
  <%= form.select :priority, options_for_select([['Urgent', 1], ['High', 2], ['Medium', 3], ['Low', 4]]),{},{ class:"block appearance-none w-full bg-gray-100 border focus:border-indigo-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white border-gray-400"}  %>
  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
  </div>
</div>

<div class="mt-2">
  <button type="submit" value="Create Task" class="flex-shrink-0 text-sm text-blue-100 border-2 border-blue-800 bg-blue-800 py-1 px-2 rounded hover:shadow-lg cursor-pointer" :class="{ 'cursor-not-allowed' : !title || !due_date }" >Create Task</button>
  <%# form.submit class:"flex-shrink-0 text-sm text-blue-100 border-2 border-blue-800 bg-blue-800 py-1 px-2 rounded hover:shadow-lg cursor-pointer" %>
  <%= link_to 'Cancel', tasks_path, class:"flex-shrink-0 text-sm py-1 px-2 border-b-2 border-transparent hover:border-blue-800 " %>
</div>
<% end %>
