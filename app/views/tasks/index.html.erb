<p class="bg-red-700 text-red-100"><%= notice %></p>

<h2 class="font-bold text-lg text-gray-700 uppercase">All Tasks<span class="text-xs font-normal text-gray-400"> <%= DateTime.now.strftime( "%F" ) %> </span></h2>
<div>
  <%= render @tasks %>
</div>

<button class="mt-6 bg-black text-gray-100 px-2 py-1 rounded" @click="modalTask = true" x-show="!modalTask">New Task
</button>
<div x-show="modalTask" class="m-2">
  <%= render 'form', task: @task %>
</div>