<headers>
  <nav class="relative flex justify-between items-center px-4 lg:px-6 sm:px-6">
    <div class="text-red-500 flex-shrink-0 flex items-center justify-between w-full md:w-auto">
      <a href="/">
        <%= render 'layouts/partials/logo'%>
      </a>
      <div class="-mr-2 flex items-center md:hidden">
        <button @click="isOpen=true" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    <div class="w-full flex items-center justify-between hidden md:flex">
      <div class="ml-10 flex items-center">
        <a href="#" class="nav-item">Product</a>
        <a href="#" class="nav-item">Features</a>
        <a href="#" class="nav-item">Marketplace</a>
      </div>
      <div class="flex items-center">
        <%= link_to 'Login', new_user_session_path, class:"nav-item" %> <%=
        link_to 'Sign Up', new_user_registration_path, class:"ml-4 text-red-500
        hover:text-red-500 nav-item" %>
      </div>
    </div>
  </nav>
  <!-- mobile nav -->
  <div class="absolute top-0 inset-x-0 p-2 transition transform origin-top-right md:hidden" x-show="isOpen" @click.away="isOpen = false">
    <div class="rounded-lg shadow-md">
      <div class="rounded-lg bg-white shadow-xs overflow-hidden">
        <div class="px-5 pt-3 flex items-center justify-end">
          <div class="-mr-2">
            <button type="button" @click="isOpen=false" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out">
              <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        <div class="px-5 pb-3">
          <div class="flex items-center justify-between w-full border-b py-4">
            <div>
              <a href="#" class="border border-red-500 px-3 py-2 rounded text-red-500 hover:bg-red-500 hover:text-red-100 transition duration-150 ease-in-out">
                Log in
              </a>
            </div>
            <div>
              <a href="#" class="border border-gray-600 px-3 py-2 rounded text-gray-600 hover:bg-gray-600 hover:text-gray-100 transition duration-150 ease-in-out">
                Sign Up
              </a>
            </div>
          </div>
          <div class="mt-2">
            <a href="#" class="block py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition duration-150 ease-in-out">Product</a>
            <a href="#" class="mt-1 block py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition duration-150 ease-in-out">Features</a>
            <a href="#" class="mt-1 block py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition duration-150 ease-in-out">Marketplace</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</headers>
<!-- Hero section -->
<section class="text-center mt-10 px-2">
  <div>
    <p class="my-4 text-sm">App built for your productivity</p>
    <h2 class="text-4xl tracking-tight leading-10 font-extrabold text-gray-900 sm:text-5xl sm:leading-none md:text-6xl">
      Let your mind
      <br class="xl:hidden" />
      <span class="text-red-600">break free</span>
    </h2>
    <p class="mt-3 text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl md:mt-5 md:text-xl mx-auto">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Modi numquam ea
      delectus incidunt consequuntur eos dignissimos v\e dicta asperiores.
    </p>
  </div>
  <div class="mt-5 sm:mt-8">
    <%= link_to 'Get started', new_user_registration_path, class:"px-8 py-3
    border border-transparent text-base leading-6 font-medium rounded-md
    text-white bg-red-500 hover:bg-red-600 focus:outline-none
    focus:shadow-outline transition duration-150 ease-in-out md:py-4 md:text-lg
    md:px-10" %>
  </div>
</section>
<!-- Hero Image -->
<section class="mt-20 flex justify-around">
  <div class="w-3/4">
    <%= image_tag 'illustrations/online_organizer', class:"w-full" %>
  </div>
</section>
<!-- Featured tagline section -->
<section class="mt-20 text-center">
  <h2 class="text-4xl tracking-tight leading-10 font-extrabold text-gray-900 sm:text-5xl sm:leading-none md:text-6xl">
    Categorize every task.
    <br />
    Prioritize accordingly.
  </h2>
  <p class="mt-3 text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl md:mt-5 md:text-xl mx-auto">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Modi numquam ea
    delectus incidunt consequuntur eos dignissimos v\e dicta asperiores.
  </p>
</section>
<section class="px-10 my-20">
  <%= render 'features' %>
</section>
<!-- Footer -->
