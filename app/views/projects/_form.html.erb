<div class="fixed h-full w-64 flex items-center justify-center">
  <div class="border border-gray-600 rounded absolute top-0 left-0">
    <div class="font-semibold py-2 px-4 bg-gray-100">
      <h2><%= (@project.persisted? ? 'Update' : 'Add') %> Project</h2>
    </div>
    <div class="py-2 px-4 mb-4 border-t border-gray-600">
      <%= form_with(model: @project) do |form| %>
      <div class="mb-4">
        <%= form.label :name, "Project Name", class:"font-bold text-sm" %>
        <%= form.text_field :name, class:"appearance-none block w-full text-sm bg-gray-100 text-gray-700 border focus:border-indigo-200 rounded-l py-2 px-4 leading-tight focus:outline-none focus:bg-white border-gray-400", placeholder:"Project Name"  %>
      </div>

      <div class="">
        <%= link_to 'Back' %>
        <%= form.submit((@project.persisted? ? 'Update' : 'Add'), class:"mt-6 bg-black text-gray-100 text-sm px-3 py-1 rounded cursor-pointer") %>
      </div>
      <% end %>
    </div>
  </div>
</div>