<!DOCTYPE html>
<html class="has-navbar-fixed-top">

<head>
  <title>Todo</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'https://unpkg.com/ionicons@5.0.0/dist/ionicons.js' %>
</head>

<body>
  <%= render 'layouts/partials/navbar' %>

  <div class="section">
    <div class="columns">
      <div class="column is-one-quarter is-hidden-mobile has-background-warning">
        <%= render "layouts/partials/sidebar" %>
      </div>
      <div class="column has-background-primary is-three-quarters">
        <%= yield %>
      </div>
    </div>

  </div>

</body>

</html>